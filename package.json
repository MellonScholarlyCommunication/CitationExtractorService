{
  "name": "citation-extractor-service",
  "version": "0.0.1",
  "description": "A citation extractor service node",
  "lsd:module": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "components",
    "dist/**/*.d.ts",
    "dist/**/*.js",
    "dist/**/*.js.map"
  ],
  "scripts": {
    "build": "npm run build:ts && npm run build:components",
    "build:ts": "npm exec tsc",
    "build:components": "componentsjs-generator -s dist -r oaior83",
    "prepare": "npm run build",
    "solid": "./bin/solid.sh",
    "bridge:demo": "./bin/bridge_demo.sh",
    "bridge:demo-next": "./bin/bridge_demo.sh next",
    "extract:prepare": "npx orch --info --in solid/inbox --out pre rules/extractCitations.n3",
    "extract:prepare-demo": "npx orch --keep --single data/demo-in.ttl rules/extractCitations.n3  > data/demo-out.ttl ",
    "extract:run": "npx pol --info --in pre",
    "extract:run-demo": "npx pol --info --keep --single data/demo-out.ttl",
    "send:prepare": "npx orch --info --in in --out out rules/biblio/sendCitationNotification.n3",
    "send:run": "npx pol --info --in out",
    "clean": "rm pre/*",
    "clean:real": "rm pre/* ; rm in/* ; rm out/*",
    "all:demo": "npm run bridge:demo ; npm run extract:prepare ; npm run extract:run ; npm run send:prepare ; npm run send:run",
    "all:demo-next": "npm run bridge:demo-next ; npm run extract:prepare ; npm run extract:run ; npm run send:prepare ; npm run send:run"
  },
  "keywords": [
    "oai-pmh",
    "event",
    "notifications",
    "ldn"
  ],
  "author": "Patrick Hochstenbach <Patrick.Hochstenbach@UGent.be>",
  "license": "MIT",
  "devDependencies": {
    "@types/jsonld": "^1.5.8",
    "@types/n3": "^1.10.4",
    "@types/parse-link-header": "^2.0.1",
    "componentsjs-generator": "^3.1.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@xmldom/xmldom": "^0.8.7",
    "componentsjs": "^5.3.2",
    "koreografeye": "^0.2.7",
    "n3": "^1.16.4",
    "parse-link-header": "^2.0.0",
    "solid-bashlib": "^0.3.4",
    "xmldom": "^0.6.0",
    "xpath": "^0.0.32"
  }
}
